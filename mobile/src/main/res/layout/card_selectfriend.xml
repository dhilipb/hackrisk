<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/v_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:background="#ffffff"
    android:foreground="@drawable/selectable_background"
    custom:cardCornerRadius="2dp"
    custom:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/selectFriendRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_friend"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_profile_pic"
            custom:riv_border_width="0dp"
            android:layout_alignParentLeft="true"
            custom:riv_oval="true" />


        <ImageView
            android:id="@+id/image_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_person_add_grey" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8dp"
            android:gravity="start"
            android:layout_toLeftOf="@id/image_add"
            android:layout_toRightOf="@id/img_friend"
            android:layout_centerVertical="true"
            android:textColor="#777"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>